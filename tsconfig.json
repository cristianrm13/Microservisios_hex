{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,  // Habilita la interoperabilidad de módulos ES
      "skipLibCheck": true,      // Evita que TypeScript revise los tipos dentro de los módulos de node_modules
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  